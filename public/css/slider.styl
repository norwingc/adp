.slider
	position relative
	.img1
		background-attachment fixed
		background-image url('../img/mana.jpg')
		background-size 100%
		height 210px
		background-repeat no-repeat		
		h1
			font-size 18px
			padding-top 10px
			font-family 'Myriad Pro Regular'
	.logo
		position absolute
		width 140px	
		top 50px
		left 30%
		
@media (min-width:768px)	
	.slider
		.img1
			background-size cover
			height 40em
			h1
				font-size 2em	
			.titul-slider
				font-family subtitul
				color white
				text-align center
				font-size 4em	
				
		.logo
			width 200px
			top 10px
			left 10px
		.social
			position absolute
			bottom 80px
			li
				list-style none	
		.nombre-slider
			position absolute
			bottom 0
			right 0
			color white
			font-size 2em
				
		
						
		